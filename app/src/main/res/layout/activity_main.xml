<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beggan3"
    tools:context=".MainActivity">


  <TextView
      android:id="@+id/idQuestionsAttempted"
      android:layout_width="match_parent"
      android:layout_height="214dp"
      android:layout_marginTop="10dp"
      android:gravity="center"
      android:text="Number Of Questions"
      android:textAlignment="center"
      android:textAllCaps="false"
      android:textColor="#FFC107"
      android:textSize="20sp" />

  <TextView
      android:id="@+id/idQuestions"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/idQuestionsAttempted"
      android:layout_marginTop="4dp"
      android:gravity="center"
      android:text="Question"
      android:textAlignment="center"
      android:textColor="#FFC107"
      android:textSize="25sp" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/idQuestions"
      android:layout_marginTop="50dp"
      android:orientation="vertical"></LinearLayout>

  <Button
      android:id="@+id/idBtnoption1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/idQuestions"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="20dp"
      android:background="#673AB7"
      android:padding="4dp"
      android:text="Option 1"
      android:textAllCaps="false"
      android:textColor="#FFC107" />

  <Button
      android:id="@+id/idBtnoption2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/idBtnoption1"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="20dp"
      android:background="#673AB7"
      android:padding="4dp"
      android:text="Option 2"
      android:textAllCaps="false"
      android:textColor="#FFC107" />

  <Button
      android:id="@+id/idBtnoption3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/idBtnoption2"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="20dp"
      android:background="#673AB7"
      android:padding="4dp"
      android:text="Option 3"
      android:textAllCaps="false"
      android:textColor="#FFC107" />

  <Button
      android:id="@+id/idBtnoption4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/idBtnoption3"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="20dp"
      android:background="#673AB7"
      android:padding="4dp"
      android:text="Option 4"
      android:textAllCaps="false"
      android:textColor="#FFC107" />

</RelativeLayout>